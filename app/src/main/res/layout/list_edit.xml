<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Nombre"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textSize="15sp"/>
        <EditText android:id="@+id/nameSL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:enabled="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />
    </LinearLayout>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/weight"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:gravity="end" />
        <EditText android:id="@+id/title_weight"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.19"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
        <TextView
            android:text="@string/kg"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_weight="0.05"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:gravity="start" />
        <TextView
            android:text="@string/price"
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="end" />

        <EditText android:id="@+id/title_price"
            android:inputType="number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.19"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"/>
        <TextView
            android:text="@string/euro"
            android:textSize="15sp"
            android:layout_width="0dp"
            android:layout_weight="0.025"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:gravity="start" />
        <Button
            android:id="@+id/refresh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.195"
            app:icon="@drawable/ic_baseline_refresh_24"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.62"
        android:orientation="vertical"
        android:layout_margin="30dp">

        <ListView android:id="@+id/products_in_list"
            android:padding="0dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:divider="@drawable/border"
            android:dividerHeight="3dp"/>
        <Button
            android:id="@+id/button_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:layout_centerHorizontal="true"
            android:text="@string/add_product_to_list" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center|bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="bottom">

        <Button android:id="@+id/delete_list"
            android:layout_width="0dp"
            android:layout_weight="0.50"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:layout_gravity="start"/>

        <Button android:id="@+id/confirm_list"
            android:layout_width="0dp"
            android:layout_weight="0.50"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="@string/confirm"
            android:layout_gravity="end"/>
    </LinearLayout>

</LinearLayout>